{
    "name": "klaviyo/php-sdk",
    "description": "Klaviyo PHP SDK",
    "keywords": ["klaviyo", "sdk"],
    "type": "library",
    "homepage": "http://github.com/klaviyo",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Klaviyo",
            "homepage": "https://github.com/klaviyo"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "ext-curl": "*",
        "friendsofphp/php-cs-fixer": "^2.18",
        "phpstan/phpstan": "^0.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.7"
    },
    "autoload": {
        "psr-4": {
            "Klaviyo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Klaviyo\\": "tests/"
        }
    },
    "scripts": {
        "php:cs": [
            "php-cs-fixer fix -v --config='.php_cs.php'"
        ],
        "tests": [
            "phpunit --verbose",
            "php-cs-fixer fix -v --dry-run --config='.php_cs.php'",
            "phpstan analyse -c phpstan.neon"
        ]
    }
}
